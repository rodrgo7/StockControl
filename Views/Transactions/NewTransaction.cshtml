@model Models.Transaction

@{
    ViewData["Title"] = "New Transaction";
}

<div class="container p-5">
    <div class="row">
        <div class="col-6 border border-light rounded p-5 shadow">
            <h6>New transaction</h6>
            <hr/>

            <form asp-action="NewTransaction">
                <div class="form-group">
                    <label>Description</label>
                    <input asp-for="Description" type="text" class="form-control form-control-sm" />
               </div>

                <div class="container">
                    <div class="row">
                        <div>
                            <button type="submit" class="btn btn-sm btn-outline-sucess">
                                Save
                            </button>
                        </div>

                        <div class="pl-1">
                            <a class="btn btn-sm btn-light" asp-action="DetailsProduct" asp-controller="Products" asp-route-productId="@Model.ProductId">Back</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>