@model Models.Transaction

@{
    ViewData["Title"] = "Update Transaction" + Model.Description;
}

<div class="container p-5">
    <div class="row">
        <div class="col-6 border border-light rounded p-5 shadow">
            <h6>Update Category @Model.Description</h6>
            <hr/>
        
            <form asp-action="UpdateCategory">
                <div class="form-group">
                    <label>Description</label>
                    <input asp-for="Description" type="text" class="form-control form-control-sm" />
                </div>

                <input hidden asp-for="TransactionId" />
                <input hidden asp-for="ProductId" />
                <input hidden asp-for="DateTransaction" />

                <div class="container">
                    <div class="row">
                        <div>
                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                Save
                            </button>
                        </div>

                        <div class="pl-1">
                            <a class="btn btn-sm btn-light" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>