@model IEnumerable<Models.Category>

    @{
        ViewData["Title"] = "Registered categories";
    }

    <div class="container p-5">
        <div class="border border-light rounded p-5">
            <a asp-controller="Categories" asp-action="NewCategory" class="btn btn-sm btn-outline-info">
                New NewCategory
            </a>
            <hr/>

            <table class="table table-striped table-hover table-sm">
                <thead>
                    <tr class="thead-light">
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>

                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td>
                                <div class="row">
                                    <a asp-controller="Categories" asp-action="UpdateCategory" asp-route-categoryId="@item.CategoryId" class="btn btn-sm btn-outline-primary rounded-circle">
                                    <i class="fa fa-pencil-square-o"></i>
                                    </a>

                                    <form asp-controller="Categories" asp-action="DeleteCategory" asp-route-category="@item.CategoryId">

                                        <button type=submit class="btn btn-sm btn-outline-danger rounded-circle">
                                            <i class="fa fa-times-circle"></i>
                                        </button>

                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>